<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dialog"
    android:layout_width="322dp"
    android:layout_height="395dp"
    android:layout_gravity="center"
    android:background="@color/colorTransparent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="2dp"
        app:cardCornerRadius="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/thums_up"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="50dp"
                android:src="@drawable/ic_thums_up"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/success"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/raleway_extrabold"
                android:text="@string/success"
                android:textSize="26sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/thums_up" />

            <TextView
                android:id="@+id/submit_discription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="21dp"
                android:layout_marginRight="21dp"
                android:fontFamily="@font/raleway_bold"
                android:padding="15dp"
                android:text="@string/submit_discription"
                android:textSize="17sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/success" />

            <Button
                android:id="@+id/done_tick"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="256dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/ic_done_tick_symbol"
                android:onClick="doneclosed"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/submit_discription" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>